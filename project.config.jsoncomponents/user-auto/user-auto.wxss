
.get_user_info_box {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
  z-index: 10;
}

.get_user_info {
  width: 550rpx;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.get_user_info_top {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  width: 100%;
  border-bottom: 1rpx solid #dbdadf;
  font-weight: bold;
}

.get_user_info_center {
  width: 100%;
  margin-top: 36rpx;
  margin-bottom: 36rpx;
  flex-direction: column;
  justify-content: center;
}

.get_user_info_logo {
  width: 66rpx;
  height: 66rpx;
  margin-bottom: 26rpx;
}

.get_user_info_centent {
  margin-bottom: 20rpx;
  height: 54rpx;
  border-bottom: 1rpx solid #dbdadf;
  font-size: 30rpx;
}

.get_user_info_msg {
  color: #89878a;
  font-size: 24rpx;
}

.get_user_info_btn_box {
  width: 100%;
  height: 80rpx;
  justify-content: center;
  overflow: hidden;
  border-top: 1rpx solid #dbdadf;
}

.get_user_info_btn {
  width: 560rpx;
  height: 86rpx;
  background-color: white;
  text-align: center;
  line-height: 86rpx;
}

.flex_box {
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
