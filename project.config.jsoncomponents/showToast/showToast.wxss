/* components/showToastComponents/showToastComponents.wxss */
.show_toast_box{
	position: fixed;
	top: 0;
	bottom: 0;
	width: 100%;
	background-color: transparent;
	display: flex;
	display: -webkit-flex;
	justify-content: center;
	align-items: center;
	z-index: 999;
}
.show_toast_content{
	padding: 18rpx;
	color: white;
	background-color: black;
	border-radius:10rpx;
	max-width: 50%;
	max-height: 50%;
	line-height: 50rpx;
	word-wrap: break-word;
	white-space: pre-wrap;
	font-size: 32rpx;
	overflow: visible;
}