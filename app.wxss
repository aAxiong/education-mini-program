page {
  background: #f5f5f5;
}

view, image {
  box-sizing: border-box;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.flex {
  display: flex;
}

.flex_item {
  flex: 1;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.clearfix::after, .clearfix::before {
  display: block;
  zoom: 1;
  clear: both;
  visibility: hidden;
  content: ' ';
}

.overHidenText {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.kong {
  position: relative;
  width: 100%;
  height: 168rpx;
}

.fixedBtn {
  position: fixed;
  bottom: 0px;
  width: 100%;
  border-radius: 0px;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  line-height: 88rpx;
  z-index: 10;
  background: #4C87FF;
}
