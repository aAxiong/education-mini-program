page {
  padding-top: 120rpx;
  background: #fff;
}

.nav {
  height: 110rpx;
  position: absolute;
  top: 0px;
  width: 100%;
  line-height: 110rpx;
  background: #fff;
  box-shadow: 0 5px 5px #f5f5f5;
}

.nav .flex_item {
  font-size: 32rpx;
  color: #000;
  text-align: center;
}

.nav .flex_item.active {
  color: #4c87ff;
}

.nav .active text {
  border-bottom: 2px solid #4c87ff;
  padding-bottom: 30rpx;
}

.order-wrapper {
  width: 690rpx;
  margin: 30rpx auto 0;
}

.order-wrapper .list {
  box-shadow: 0 2px 6px 0 #dadada;
  background: #fff;
  border: 1px solid #eee;
  padding: 24rpx 30rpx 30rpx 30rpx;
  margin-bottom: 30rpx;
}

.order-wrapper .list .list-top {
  padding-bottom: 24rpx;
  margin-top: 40rpx;
}

.order-wrapper .list .list-top1 {
  margin-top: 30rpx;
}

.order-wrapper .list .pic {
  width: 120rpx;
  height: 120rpx;
  background: #e8e8e8;
  margin-right: 20rpx;
}

.order-wrapper .list .pic image {
  width: 100%;
  height: 100%;
}

.order-wrapper .list .order-top {
  line-height: 30rpx;
  font-size: 28rpx;
  color: #333;
  width: 480rpx;
}

.order-wrapper .order-status {
  font-size: 22rpx;
  color: #5c99f4;
  margin-left: 10px;
}

.order-wrapper .list-status {
  font-size: 22rpx;
  color: #333;
  /* margin-bottom: 30rpx; */
}

.order-wrapper .list .order-middle .info {
  font-size: 22rpx;
  color: #9b9b9b;
  margin-top: 16rpx;
}

.order-wrapper .list .order-middle .pri {
  font-size: 28rpx;
  color: #f00;
  margin-top: 10rpx
}


.order-wrapper .list-bottom .fr {
  width: 180rpx;
  height: 50rpx;
  border: 2rpx solid #9b9b9b;
  border-radius: 3px;
  font-size: 26rpx;
  color: #9b9b9b;
  text-align: center;
  line-height: 50rpx;
  margin-right: 30rpx;
  margin-top: 16rpx;
}
.sendBtn {
  width: 180rpx;
  height: 50rpx;
  border: 2rpx solid #9b9b9b;
  border-radius: 3px;
  font-size: 26rpx;
  color: #9b9b9b;
  text-align: center;
  line-height: 50rpx;
  margin-top: 16rpx;
}

.order-wrapper .list-bottom .active, .sendBtn.active {
  border: 2rpx solid #4c87ff;
  color: #4c87ff;
}

.order-wrapper .list-bottom view:first-child {
  margin-right: 0px;
}
