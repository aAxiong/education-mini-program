/*购物车*/

.shopCart {
  position: relative;
}

.shopcar .mask {
  opacity: 0;
  -webkit-transition-duration: 0.3s;
  transition-duration: 0.3s;
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  visibility: hidden;
}

.shopcar {
  display: fixed;
  bottom: 0;
}

.shopcar .mask.visible {
  opacity: 1;
  visibility: visible;
}

.shopcar .shopWindow {
  position: fixed;
  bottom: -440rpx;
  left: 0;
  z-index: 9999;
  width: 100%;
  padding-bottom: 30rpx;
  background: #fff;
  height: 423rpx;
  transform: translate(0px, -233.496px);
  transition: transform 300ms ease 0ms;
  transform-origin: 50% 50% 0px;
}

.shopcar .shopinfo {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin: 0 24rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
}

.shopcar .shopinfo .infobox1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shopcar .shopinfo .infobox1 .imabox {
  width: 158rpx;
  height: 158rpx;
  position: relative;
}

.shopcar .shopinfo .infobox1 .imabox image {
  width: 158rpx;
  height: 158rpx;
  border-radius: 20rpx;
  border: 2rpx solid #fff;
  position: absolute;
  top: -20rpx;
}

.shopcar .shopinfo .infobox1 .info {
  margin-left: 20rpx;
}

.shopcar .shopinfo .infobox1 .info .name {
  width: 400rpx;
  color: #333;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.shopcar .shopinfo .infobox1 .info .price {
  color: #ff3b30;
  font-size: 36rpx;
  margin-top: 20rpx;
}

