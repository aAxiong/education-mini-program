page {
  background: #fff;
}

.icon {
  width: 130rpx;
  height: 130rpx;
  margin: 100rpx auto 33rpx;
}

.icon image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 40rpx;
  color: #333;
  text-align: center;
}

.text {
  margin-top: 17rpx;
  text-align: center;
  font-size: 28rpx;
  color: #888;
}

.controlbtn {
  margin: 100rpx 32rpx 0;
}

.controlbtn .btn {
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  color: #4c87ff;
  border-radius: 3px;
  background: #e2ecff;
}

.controlbtn .btn:last-child {
  background: #4c87ff;
  color: #fff;
}
