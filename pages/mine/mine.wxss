page {
  background: #fff;
}

.usertop {
  height: 110rpx;
  padding-left: 30rpx;
}

.usertop .head {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 7rpx;
}

.usertop .head  image {
  width: 120rpx;
  height: 120rpx;
}

.usertop .name {
  font-size: 50rpx;
  color: #1a2a3e;
  margin-left: 30rpx;
  line-height: 120rpx;
  max-width: 300rpx;
}

.usertop .score {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  line-height: 120rpx;
}

.order {
  background: #fff;
  border: 1px solid #eee;
  box-shadow: 0 5px 14px 0 rgba(218, 218, 218, 0.65);
  width: 690rpx;
  height: 284rpx;
  margin: 55rpx auto 0;
  padding: 30rpx;
}

.order .top {
  line-height: 70rpx;
  border-bottom: 1px solid #e4e4e4;
}

.order .top .title {
  font-size: 32rpx;
  color: #000;
}

.order .top .goorder {
  font-size: 24rpx;
  color: #999;
}

.order .top  image {
  width: 17rpx;
  height: 32rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.order .middle .list {
  font-size: 24rpx;
  color: #000;
  text-align: center;
}

.order .middle .list image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}

.nav-list {
  margin: 74rpx auto 0;
  padding-left: 30rpx;
}

.nav-list .list {
  margin-bottom: 35rpx;
}

.nav-list .list .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.nav-list .list .right-wrapper {
  padding-bottom: 35rpx;
  border-bottom: 1px solid #eee;
}

.nav-list .list .right-wrapper .title {
  font-size: 32rpx;
  color: #000;
  line-height: 40rpx;
}

.nav-list .list .right-wrapper image {
  width: 17rpx;
  height: 32rpx;
  margin-right: 60rpx;
  margin-top: 6rpx;
}

.rightBtn {
  height: 100%;
  width: 90rpx;
  background: #4c87ff;
  float: right
}
