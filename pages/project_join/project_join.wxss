page {
  padding-bottom: 40rpx;
  background: #fff;
}

.sign_up_top {
  width: 100%;
  height: 450rpx;
  position: relative;
}

image {
  width: 100%;
  height: 100%;
}

.sign_up_top .sign_up_top_middle {
  margin: 0 auto;
  position: absolute;
  left: 0px;
  right: 0px;
  top: 0;
}

.sign_up_top .logo {
  width: 69rpx;
  height: 29rpx;
  margin-left: 20rpx;
  margin-top: 16rpx;
}

.sign_up_top .text {
  font-size: 28rpx;
  color: #fff;
  margin: 18rpx auto 21rpx;
  text-align: center;
}

.sign_up_top .join_bg {
  width: 614rpx;
  height: 191rpx;
  margin: 0 auto;
  position: relative;
}

.sign_up_top .join_bg .title {
  font-size: 64rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  top: 22rpx;
  left: 0;
  right: 0;
}

.sign_up_top .join_bg .title_text {
  font-size: 24rpx;
  color: #f5f5f5;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.bottomText {
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  width: 580rpx;
  margin: 42rpx auto 0;
}

.bottomText view.pink {
  font-size: 32rpx;
  color: #ff8e9a;
  margin: -12rpx 14rpx 0;
}

.sign_up_form {
  margin-top: 42rpx;
}

.sign_up_form .title {
  font-size: 48rpx;
  color: #4a4a4a;
  text-align: center;
}

.fixedbtn {
  width: 686rpx;
  margin: 78rpx auto 0;
}

.fixedbtn view {
  width: 335rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.fixedbtn .fl {
  background: #e2ecff;
  border-radius: 3px;
  font-size: 36rpx;
  color: #4c87ff;
  text-align: center;
}

.fixedbtn .fr {
  background: #4c87ff;
  border-radius: 3px;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
}

.changeSex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.changeSex .btn {
  width: 287rpx;
  margin-top: 40rpx;
  height: 120rpx;
  background: #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #9c9c9c;
  font-size: 34rpx;
}

.changeSex .btn image {
  width: 100rpx;
  height: 104rpx;
  margin-top: 16rpx;
}

.changeSex .btn.boybtn {
  border-top-left-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
}

.changeSex .btn.boybtn image {
  margin-left: 50rpx;
}

.changeSex .btn.girlbtn image {
  margin-right: 50rpx;
}

.changeSex .btn.boybtn text {
  margin-right: 30rpx;
}

.changeSex .btn.girlbtn text {
  margin-left: 30rpx;
}

.changeSex .btn.girlbtn {
  border-top-right-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
}

.changeSex .btn.boybtn.active {
  background: #4c87ff;
  color: #fff;
}

.changeSex .btn.girlbtn.active {
  background: #ff8e9a;
  color: #fff;
}

.inputbox {
  margin: 0 auto;
  margin-top: 80rpx;
}

.inputbox .inputli {
  display: flex;
  align-items: center;
  background: #f6f6f6;
  border-radius: 100px;
  width: 686rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-bottom: 60rpx;
}


.inputbox .inputli image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 46rpx;
}

.inputbox .inputli input, .inputbox .inputli .input {
  width: 408rpx;
  height: 100rpx;
  margin-left: 20rpx;
  font-size: 34rpx;
  text-align: left;
  line-height: 100rpx;
  color: #666;
}
