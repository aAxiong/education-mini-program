page {
  background: #fff;
}

.top {
  margin: 15rpx 40rpx;
}

.textarea {
  text-align: left;
  font-size: 30rpx;
  color: #333;
  width: 100%;
  height: 200rpx;
  line-height: 34rpx;
}

.imgList {
  width: 164rpx;
  height: 164rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
  position: relative;
  margin-top: 30rpx;
}

.imgList .delete_icon {
  width: 100%;
  height: 100%;
}

.imgList .delete_icon_wrapper {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: -21rpx;
  top: -21rpx;
}

.imgList .delete_icon_wrapper::after {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  left: -10rpx;
  content: ' ';
  bottom: -10rpx;
  /* background: red; */
}

.imgList:last-child {
  margin-right: 0;
}

.imgList.border {
  border: 1px dashed #d8d8db;
}

.imgList image, .imgList video {
  width: 100%;
  height: 100%;
}

.imgList .addicon {
  width: 58rpx;
  height: 49rpx;
  margin: 35rpx auto 10rpx;
}

.btn {
  background: #e2ecff;
  border-radius: 4rpx;
  width: 686rpx;
  height: 94rpx;
  margin: 60rpx auto 0;
  text-align: center;
  line-height: 94rpx;
  font-size: 36rpx;
  color: #4c87ff;
}

.fixed {
  position: fixed;
  bottom: 0;
}

.fixed .mask {
  opacity: 0;
  -webkit-transition-duration: 0.3s;
  transition-duration: 0.3s;
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  visibility: hidden;
}

.fixed .mask.visible {
  opacity: 1;
  visibility: visible;
}

.fixed .shopWindow {
  position: fixed;
  bottom: -406rpx;
  left: 0;
  z-index: 9999;
  width: 100%;
  padding-bottom: 30rpx;
  background: #fff;
  height: 406rpx;
  /* transform: translate(0px, -233.496px); */
  transform: translate(0, 0);
  transition: transform 300ms ease 0ms;
  transform-origin: 50% 50% 0px;
}

.fixed .shopWindow .ul .li {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #4c87ff;
  border-bottom: 1px solid #eee;
}

.fixed .shopWindow .ul .line {
  background: #f5f5f5;
  height: 14rpx;
}

.fixed .shopWindow .ul .noborder {
  border-bottom: 0px;
}

.fixed .shopWindow .ul .pink {
  color: #ff8e9a;
}
