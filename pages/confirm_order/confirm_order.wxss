page {
  background: #fff;
  padding-bottom: 124rpx;
}

image {
  width: 100%;
  height: 100%;
}

.order_top {
  padding: 18rpx 40rpx 32rpx;
}

.order_top .icon {
  width: 28rpx;
  height: 34rpx;
}

.order_top .content-top {
  margin-left: 32rpx;
}

.order_top  .content-top2 {
  margin-left: 14rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
}

.order_top .content-top .clearfix {
  line-height: 34rpx;
}

.order_top .content-top .fl {
  font-size: 34rpx;
  color: #333;
}

.order_top .content-top .fr {
  font-size: 30rpx;
  color: #999;
}

.order_top .content-top .address_desc {
  font-size: 34rpx;
  color: #333;
  line-height: 50rpx;
  margin-top: 4rpx;
}

.order_top .right_icon {
  width: 17rpx;
  height: 32rpx;
  margin-left: 50rpx;
}

.line-bg {
  background: #f5f5f5;
  height: 16rpx;
  width: 100%;
}

.content {
  padding: 30rpx 40rpx 0;
}

.content-list {
  border-bottom: 1px solid #eee;
}

.content-list .title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.content-list .list {
  margin-bottom: 40rpx;
}

.content-list .list .pic {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.content-list .list .list-title {
  font-size: 28rpx;
  color: #333;
  width: 500rpx
}

.content-list .list .list-info {
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #9b9b9b;
}

.content-list .list .list-bottom {
  margin-top: 14rpx;
}

.content-list .list .list-pri {
  font-size: 28rpx;
  color: #f00;
}

.content-list .list .list-count {
  color: #666;
  font-size: 28rpx;
}

.list-info-small {
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.list-remank {
  font-size: 28rpx;
  color: #333;
  line-height: 100rpx;
  border-bottom: 1px solid #eee;
}

.list-remank input {
  height: 100rpx;
  margin-left: 40rpx;
}

.fixBtn {
  border-top: 1px solid #eee;
  line-height: 120rpx;
  height: 120rpx;
  padding: 0 40rpx;
  align-items: center;
  justify-content: space-between;
  bottom: 0px;
  left: 0px;
  width: 100%;
  position: fixed;
}

.fixBtn .btn {
  background: #4c87ff;
  border-radius: 3rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  width: 335rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.fixBtn .text {
  font-size: 24rpx;
  color: #333;
}

.fixBtn .text text {
  font-size: 36rpx;
  color: #4c87ff;
}
